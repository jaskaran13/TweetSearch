<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:autoSizeTextType="uniform">

        <TextView
            android:id="@+id/name_items"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/leftmargin"
            android:layout_marginTop="@dimen/main_name_topmargin"
            android:layout_marginEnd="@dimen/main_name_endmargin"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/main_Name_TextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/image_item"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/screenname_itens"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_Screenname_startmargin"
            android:layout_marginEnd="@dimen/main_name_endmargin"
            android:textSize="@dimen/main_Screenname_TextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_item"
            app:layout_constraintTop_toBottomOf="@+id/name_items" />

        <TextView
            android:id="@+id/Text_items"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_Text_startmargin"
            android:layout_marginTop="@dimen/main_Text_topmargin"
            android:layout_marginEnd="@dimen/main_Text_endtmargin"
            android:layout_marginBottom="@dimen/main_Text_Bottommargin"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/main_Text_TextSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/image_item"
            app:layout_constraintTop_toBottomOf="@+id/screenname_itens"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="@dimen/main_width_image"
            android:layout_height="@dimen/main_height_image"
            android:layout_marginStart="@dimen/main_Image_startmargin"
            android:layout_marginTop="@dimen/main_Image_topmargin"
            android:contentDescription="@string/main_ContentDes_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>